<style>

  .contenedor {
    margin: 8% 30px;
    position: relative;
    width: 95%;
    height: 100%;
    padding: 1em;
    color: var(--caoba);
    transition: all 0.4s ease;
    border-radius: 0.5em;
  }

  .contenedor .ul {
    width: 100%;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    gap: 15px;
    cursor: pointer;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;
  }
  .ul h2 {
    font-size: 25px;
  }
  .contenedor .li {
    background-color: transparent;
    padding: 15px 20px;
    color: var(--caoba);
    border-radius: 15px;
    font-weight: 600;
    border: 2px solid var(--caoba);
    transition: 0.5s;
    gap: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .contenedor .li.activo {
    background-color: var(--caoba);
    color: var(--white);
    font-weight: 500;
  }
  .contenedor .li:hover{
    background-color: var(--caoba);
    color: var(--white);
    font-weight: 500;
  }
  .contenedor .subcontenedor {
    position: relative;
    margin: 10px 0px;
  }

  .contenedor .bloque {
    opacity: 1;
    transform: translateY(0%);
    background-color: var(--white);
    width: 100%;
    padding: 30px;
    box-shadow:
      rgba(0, 0, 0, 0.1) 0px 10px 15px -3px,
      rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;
  }

.gratis{
  display: flex;
  justify-content: center;
  font-size: 40px;
  text-align: center;
}
.gratis a{
  color: var(--gold);
}

</style>

<script>

  "use strict";

  const li = document.querySelectorAll(".li");
  const bloque = document.querySelectorAll(".bloque");

  // CLICK en li
  // TODOS .li quitar la clase activo
  // TODOS .bloque quitar la clase activo
  // .li con la posicion se añadimos la clase activo
  // .bloque con la posicion se añadimos la clase activo

  // Recorriendo todos los LI
  li.forEach((cadaLi, i) => {
    // Asignando un CLICK a CADALI
    li[i].addEventListener("click", () => {
      // Recorrer TODOS los .li
      li.forEach((cadaLi, i) => {
        // Quitando la clase activo de cada li
        li[i].classList.remove("activo");
        // Quitando la clase activo de cada bloque
        bloque[i].classList.remove("activo");
      });

      // En el li que hemos click le añadimos la clase activo
      li[i].classList.add("activo");
      // En el bloque con la misma posición le añadimos la clase activo
      bloque[i].classList.add("activo");
    });
  });
</script>
